# (<branch><branch tracking>|<local status>)
setopt promptsubst
archey -c

# Prompt
PROMPT='%{$fg_no_bold[green]%}%n@%m:%~%{$reset_color%}:%{$fg_bold[white]%}$(rvm_info_for_prompt)%{$reset_color%}:$(git_prompt_info)$(git_remote_status)$(git_prompt_status) $ '
RPROMPT=''

